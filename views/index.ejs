<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title><%=title%></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.core.min.css">
    <link rel="stylesheet" href="stylesheets/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.theme.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body class="bg-dark">
    <div class="row justify-content-center h-100 w-100">

        <form class="row mt-5 justify-content-center" action="/upload" method="post" enctype="multipart/form-data">
            <div class="col-auto">
                <label for="image" class="visually-hidden">Email</label>
                <input id="image" class="form-control" type="file" name="image" accept="image/*" onchange="checkFile()">
            </div>
            <div class="col-auto">
                <button id="button" type="submit" class="btn btn-primary mb-3" disabled>Envoyer</button>
            </div>
        </form>

        <div class="col-md-10">
            <% if(photos.length) { %>
                <div class="glide mt-3">
                    <div class="glide__track" data-glide-el="track">
                      <ul class="glide__slides">
                          <% for(var i=0; i<photos.length; i++) {%>
                              <li class="glide__slide">
                                  <div class="click-zoom">
                                      <label class="image-wrap">
                                          <input type="checkbox">
                                          <img class="img-fluid" src="upload/<%=photos[i].image%>" alt="">
                                      </label>
                                  </div>
                              </li>
                          <% } %>
                      </ul>
                    </div>
                    <div class="glide__arrows" data-glide-el="controls">
                        <button class="glide__arrow glide__arrow--left col" data-glide-dir="<">prev</button>
                        <button class="glide__arrow glide__arrow--right col" data-glide-dir=">">next</button>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
    <script>
        new Glide('.glide', {
            type: 'carousel',
            perView: 3,
            autoplay: 5000
        }).mount()

        function checkFile() {
          let image = document.getElementById("image");
          let button = document.getElementById("button");
          if (image.files.length !== 0) {
            button.removeAttribute("disabled");
          } else {
            button.setAttribute("disabled", true);
          }
        }

    </script>
</body>
</html>
